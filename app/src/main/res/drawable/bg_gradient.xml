<?xml version="1.0" encoding="utf-8"?><!--
    This XML defines a rectangle shape with a linear gradient background.
    It can be used for buttons, backgrounds, or other UI elements.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
        Defines a linear gradient that transitions from startColor to endColor.
        The gradient flows in a specific direction based on the angle.
    -->
    <gradient
        android:angle="270"
        android:endColor="@color/gradient_end_color"
        android:startColor="@color/gradient_start_color"
        android:type="linear" />

</shape>
