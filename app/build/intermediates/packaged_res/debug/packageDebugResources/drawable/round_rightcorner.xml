<?xml version="1.0" encoding="utf-8"?>
<!--
    This XML defines a rectangle shape with a solid background color.
    It has rounded corners on the right side (top-right & bottom-right).
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
        Defines the solid fill color of the rectangle.
        The color is fetched from the app's color resources.
    -->
    <solid android:color="@color/light_green"/>

    <!--
        Defines rounded corners for the shape.
        Here, only the top-right and bottom-right corners are rounded.
        The radius values are fetched from the app's dimensions resources.
    -->
    <corners
        android:topRightRadius="@dimen/dimen_8dp"
        android:bottomRightRadius="@dimen/dimen_8dp"/>

</shape>
