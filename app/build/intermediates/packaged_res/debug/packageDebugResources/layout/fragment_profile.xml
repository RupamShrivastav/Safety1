<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tVProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center_horizontal"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="@dimen/dimen_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:src="@drawable/ic_male_person" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="@string/profile" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp"
                    tools:text="@string/profile" />


                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_edit_square_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    tools:text="Edit Profile" />


                <TextView
                    android:id="@+id/profileLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_extra_light_italic"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:text="This will give your CardView a user-defined corner for only the bottom corners."
                    android:textSize="@dimen/dimen_14sp"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_8dp"
            android:orientation="vertical"
            android:padding="4dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardElevation="@dimen/dimen_4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:padding="@dimen/dimen_4dp"
                        android:textColor="@color/black"
                        android:text="Edit Profile" />


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/dimen_8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/updateName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:textColor="@color/black"
                                android:padding="@dimen/dimen_8dp"
                                android:text="Name"
                                android:textSize="16sp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="8dp"/>

                            <TextView
                                android:id="@+id/updateNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:padding="@dimen/dimen_8dp"
                                android:textColor="@color/black"
                                android:text="Phone Number"
                                android:textSize="16sp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="8dp"/>

                            <TextView
                                android:id="@+id/updatePassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:padding="@dimen/dimen_8dp"
                                android:textColor="@color/black"
                                android:text="Password"
                                android:textSize="16sp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="8dp"/>

                            <TextView
                                android:id="@+id/updatePin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:padding="@dimen/dimen_8dp"
                                android:textColor="@color/black"
                                android:text="Security PIN"
                                android:textSize="16sp" />
                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="8dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/guardNum"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="5">


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="2.25"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_regular"
                                            android:gravity="start"
                                            android:padding="@dimen/dimen_8dp"
                                            android:layout_marginStart="8dp"
                                            android:text="Trusted Contact"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/trustedContactNameProfile"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="2.25"
                                            android:fontFamily="@font/poppins_regular"
                                            android:gravity="end"
                                            android:padding="@dimen/dimen_8dp"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            tools:text="Trusted " />

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight=".5"
                                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                                    </LinearLayout>


                                </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inviteContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardElevation="@dimen/dimen_4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:text="Invite Contacts"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardElevation="@dimen/dimen_4dp">

                <TextView
                    android:id="@+id/signout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:layout_weight="9"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:text="Sign Out"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>